<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true" autoconfigure="false" autowire="false"/>

        <service id="brightweb.stan_pay_plugin.action.capture" class="Brightweb\SyliusStanPayPlugin\Action\CaptureAction">
            <argument type="service" id="brightweb.stan_pay_plugin.bridge.stan_pay"/>
            <tag name="payum.action" factory="stan_pay" alias="payum.action.capture"/>
        </service>

        <service id="brightweb.stan_pay_plugin.action.notify" class="Brightweb\SyliusStanPayPlugin\Action\NotifyAction">
            <argument type="service" id="brightweb.stan_pay_plugin.bridge.stan_pay"/>
            <tag name="payum.action" factory="stan_pay" alias="payum.action.notify"/>
        </service>

        <service id="brightweb.stan_pay_plugin.action.status" class="Brightweb\SyliusStanPayPlugin\Action\StatusAction">
            <argument type="service" id="brightweb.stan_pay_plugin.bridge.stan_pay"/>
            <tag name="payum.action" factory="stan_pay" alias="payum.action.status"/>
        </service>

        <service id="brightweb.stan_pay_plugin.action.convert_payment" class="Brightweb\SyliusStanPayPlugin\Action\ConvertPaymentAction">
            <tag name="payum.action" factory="stan_pay" alias="payum.action.convert_payment"/>
        </service>
    </services>
</container>